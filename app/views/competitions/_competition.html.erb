<div id="<%= dom_id competition %>">

  <br>

  <strong><%= competition.name %></strong>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= competition.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Topic:</strong>
    <%= competition.topic %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Age from:</strong>
    <%= competition.age_from %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Age to:</strong>
    <%= competition.age_to %>
  </p>
  <p>
    Tags:
    <% competition.competition_tags.each do |tag| %>
          <tr>
            <td><%= link_to tag.tag, search_competitions_path(tags: [tag]), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"%>
            <%# "," if %>
            </td>
          </tr>
        <% end %>
  </p>
  <br>
  </div>
